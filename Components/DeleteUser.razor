<MudDialog>
    <DialogContent>
        <MudList>
            <MudListItem>
                <MudText>Are You Sure You Want To Delete</MudText>
            </MudListItem>
            <MudListItem>
                <MudButton Variant="Variant.Filled" Color="Color.Error" FullWidth="true" OnClick="Submit">Delete</MudButton>
            </MudListItem>
            <MudListItem>
                <MudButton Variant="Variant.Filled" Color="Color.Warning" FullWidth="true" OnClick="Cancel">Cancel</MudButton>
            </MudListItem>
        </MudList>

    </DialogContent>
</MudDialog>


@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!; 

    void Submit()=> MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Close(DialogResult.Ok(false));
}